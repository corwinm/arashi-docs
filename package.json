{
  "name": "arashi-docs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Dedicated documentation site for Arashi",
  "packageManager": "bun@1.2.2",
  "scripts": {
    "sync:content": "bun run scripts/sync-docs-content.ts",
    "dev": "bun run sync:content && astro dev",
    "build": "bun run sync:content && astro check && astro build",
    "preview": "astro preview",
    "lint:markdown": "markdownlint \"README.md\" \"docs/**/*.md\" --disable MD013",
    "lint": "bun run lint:markdown",
    "validate:build": "bun run build",
    "validate:docs-domain": "bun run scripts/check-canonical-docs-domain.ts",
    "validate:links:internal": "bun run scripts/check-internal-links.ts",
    "validate:a11y": "bun run build && bun run scripts/check-a11y-smoke.ts",
    "validate:links:external": "bun run scripts/check-external-links.ts",
    "validate:readme-link": "bun run scripts/check-readme-link.ts",
    "validate:install-command-parity": "bun run scripts/check-install-command-parity.ts",
    "validate": "bun run lint && bun run validate:build && bun run validate:links:internal && bun run validate:a11y && bun run validate:docs-domain && bun run validate:readme-link && bun run validate:install-command-parity"
  },
  "dependencies": {
    "@astrojs/starlight": "^0.32.1",
    "astro": "^5.2.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "markdownlint-cli": "^0.45.0",
    "typescript": "^5.9.0"
  }
}
